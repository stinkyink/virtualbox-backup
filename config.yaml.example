virtual-machines:
  pause-for-snapshot: true
  include:
    - VM Name or UUID
    - VM Name or UUID
  offsite-exclude: []
local:
  out-dir: './Out'
  commands:
    vbox-manage: 'VBoxManage'
    lvm: 'sudo lvm'
    mount: 'sudo mount'
    umount: 'sudo umount'
offsite:
  backend: glacier  # or s3
  encryption-key: XXXX
  expiry-days: 0.9
aws:
  access-key: XXXX
  secret-key: XXXX
  region: eu-west-1
  upload-chunk-size: 67108864 #64MiB
  glacier:
    vault: Backups
    archive-list-file: './archives.csv'
  s3:
    bucket: Backups
